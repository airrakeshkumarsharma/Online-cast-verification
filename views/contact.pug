  body(style='background:radial-gradient(ellipse at center, rgba(255, 255, 255, 1) 0%, rgba(19, 80, 88, 1) 100%)')
    nav.navbar.navbar-default(style='background-color: rgb(38, 77, 115);')
      .container-fluid(style='height: 80px;')
        .navbar-brand
          a.col-md-offset-2(href='index.html')
            img(src='https://www.digitalgujarat.gov.in/images/logo.png', style='background-color: white; border-radius: 5px;')
        ul.nav.navbar-nav.navbar-right(style='padding-top: 15px; padding-right: 50px;')
          li
            a(href='/index', style='color: white;') Home
    .col-md-12(style='border-radius: 5px;')
      .col-md-8.col-md-offset-2.jambotron
        .col-md-12
          h1.text-center(style='color: #fff;font-weight: 400') Contact Us
          .col-md-4.text-center
            h3
              b.text-center.fa.fa-envelope  Email
            span tester@gmail.com
          .col-md-4.text-center
            h3
              b.text-center.fa.fa-map-marker  Address
            span Near tester location testing street
          .col-md-4.text-center
            h3
              b.text-center.fa.fa-phone  Phone
            span 1234567890
          .clearfix
          br
          br
          br
          br
        div
          center
            h2 Feed Back
          form(method='post')
            .form-group
              label(for='name') Name:
              .input-group
                span.input-group-addon
                  i.fa.fa-address-card
                .row
                  .col-sm-6
                    input#name.form-control(type='text', name='name', placeholder='First Name')
                  .col-sm-6
                    input#Sname.form-control(type='text', name='name', placeholder='Second Name')
            .form-group
              label(for='email') Em@il:
              .input-group
                span.input-group-addon
                  i.fa.fa-envelope
                input#email.form-control(type='email', name='email', placeholder='User Name')
            .form-group
              label(for='phone') Phone No.:
              .input-group
                span.input-group-addon
                  i.fa.fa-phone
                input#phone.form-control(type='text', name='phone', placeholder='Phone Number')
            .form-group
              label(for='feedback') Feed Back:
              .input-group
                span.input-group-addon
                  i.fa.fa-file-text
                input#feedback.form-control(type='text', name='feedback', placeholder='Feed Back here!!!', style='height: 200px;')
            .col-md-12
              button.btn.btn-lg(style='padding: 0 20px;') Submit
          .clearfix
    .clearfix
    br
